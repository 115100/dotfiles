Config {
	font = "xft:inconsolata",
	borderColor = "black",
	border   = TopB,
	bgColor  = "black",
	fgColor  = "grey",
	position = TopW L 100,
	template = "%StdinReader% }{ %cpu% <fc=#85919b>%memory%</fc> %battery% <fc=#daccbb>%date%</fc>",
	commands = [Run Cpu ["-L", "5", "-H", "50",
	                     "--normal", "#85c600", "--high", "#E03C52",
	                     "--template", "CPU: \xF201 <total>%"] 3,
	            Run Memory ["-t", "Mem:\xF200 <usedratio>%"] 10,
	            Run BatteryP ["BAT0"]
	                         ["-t", "Battery: <acstatus>/<left>%/<timeleft>"]
	                         100,
	            Run Date "Date: %Y %b %d (%a) %H:%M %Z" "date" 10,
	            Run StdinReader
	           ]
}
