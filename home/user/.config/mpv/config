vo=gpu
profile=gpu-hq
opengl-pbo=yes

stop-screensaver=no

input-ipc-server=/tmp/mpv-socket

deband-iterations=2
deband-range=12
temporal-dither=yes

interpolation=yes
tscale=oversample
video-sync=display-resample

blend-subtitles=video
keep-open=always

audio-normalize-downmix=yes
volume-max=100

alang=jpn,jp,eng,en
slang=jpn,jp,eng,en

cache=auto
cache-default=2000000
cache-backbuffer=1000000
cache-initial=1000
cache-seek-min=2000

screenshot-directory=/tmp/screenshots
screenshot-template="%F-%P"
screenshot-format=jpeg
screenshot-jpeg-quality=95

icc-profile-auto=yes
icc-cache-dir=/home/user/.local/mpv/cache

[UHD]
profile-desc=cond:get('height',0) >= 2000
scale=spline36
cscale=spline36
fullscreen=yes

[HD]
profile-desc=cond:get('height',0) < 2000 and get('height',0) >= 700
scale=ewa_lanczossharp
cscale=ewa_lanczossharp

[SD]
profile-desc=cond:get('height',0) < 700
scale=ewa_lanczossharp
cscale=ewa_lanczossharp
