profile=opengl
opengl-pbo=yes

deband-iterations=2
deband-range=12
temporal-dither=yes

interpolation=yes
tscale=oversample
video-sync=display-resample

osc=no

blend-subtitles=yes

audio-pitch-correction=no
audio-normalize-downmix=yes
volume-max=100

cache=auto
cache-default=2000000
cache-backbuffer=1000000
cache-initial=1000
cache-seek-min=2000

screenshot-directory=/tmp/screenshots
screenshot-format=png
screenshot-template="%F-%P"
screenshot-png-compression=0

[UHD]
profile-desc=cond:get('height',0) >= 2000
scale=spline36
cscale=spline36
fullscreen=yes

[HD]
profile-desc=cond:get('height',0) < 2000 and get('height',0) >= 700
scale=haasnsoft
cscale=ewa_lanczos

[SD]
profile-desc=cond:get('height',0) < 700
scale=haasnsoft
